{% unless site.blogroll == empty %}
  {% for menu in site.blogroll %}
    {% unless menu.items == empty %}
      <section class="linklist">
        <nav>
          {% include 'heading' title: menu.title %}
          {% unless menu.items == empty %}
            <ul class="text-[13px]">
              {% for menu_item in menu.items %}
                <li class="{{ menu_item.url | text_if_current}}">
                  <a href="{{ menu_item.url }}" class="block py-0.5 hover:text-[#F0A848]">{{ menu_item.title }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endunless %}
        </nav>
      </section>
    {% endunless %}
  {% endfor %}
{% endunless %}

{% if site.comments_enabled? %}
  <div class="comments p-4 md:p-8 border-t border-white/10">
    <h4>Comments</h4>
    {% for response in post.responses %}
      {% include 'response' %}
    {% endfor %}
    {% if post.comments.size > 0 %}
      <h4 class="text-lg">Add a comment</h4>
    {% endif %}
    {% form 'comment' %}
  </div>
{% endif %}

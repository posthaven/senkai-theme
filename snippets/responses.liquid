<div class="post-responses">
  <div class="posthaven-share-links">
    <div class="posthaven-share-item">
      {{ post | upvote_button }}
    </div>
  </div>

  {% if site.comments_enabled? %}
    <div class="responses">
      <h4>Comments</h4>
      {% for response in post.responses %}
        {% include 'response' %}
      {% endfor %}
      {% if post.comments.size > 0 %}
        <h4>Add a comment</h4>
      {% endif %}
      {% form 'comment' %}
    </div>
  {% endif %}
</div>

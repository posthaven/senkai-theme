{% capture subhead_content %}
  <h3 class="text-base mb-0 text-[#F0A848]"><strong>All Tags</strong></h3>
{% endcapture %}

<div id="main">
  <div class="all-tags">
    <ul>
      {% for t in site.tags %}
        <li>
          <a href="{{ t.url }}">{{ t.name }} <span class="opacity-50">{{ t.post_count }}</span></a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>


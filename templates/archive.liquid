{% capture subhead_content %}
  <h2 class="archive-title">Archive</h2>
  <div class="archive-all-dates">{{ archive.all_dates_link }}</div>
{% endcapture %}

<div class="archive-container toggle-tabs p-4 md:p-8">
  <div id="main" class="archive-results">
    <section class="search-archive">
      {% form 'archive' %}
    </section>

    <div class="archive-view">
      <a id="all-link" href="#all">All posts</a>
      <a id="date-link" href="#date">Browse by date</a>
    </div>

    <section id="archive-results-all" class="archive-list">
      <ul>
        {% archive_results date_format:'%b %e, %Y' %}
        <li class="mb-8">
          <h2 class="post-title text-2xl mb-1"><a href="{{ result.url }}">{{ result.title }}</a></h2>
          <a href="{{ result.url }}" class="opacity-60 block mb-2"><time>{{ result.date }}</time></a>
          <div class="search-highlight prose">
            {{ result.snippet }}
          </div>
        </li>
        {% endarchive_results %}
      </ul>

      <div class="archive-pagination">
        {{ archive.pagination }}
      </div>
    </section>

    <section id="archive-results-by-date" class="archive-by-date">
      <ul>
        {% archive_months %}
          <li>
            <a href="{{ month.url }}">
              <h2 class="text-xl mb-1"><span>{{ month.date }}</span></h2>
              <span class="count text-sm opacity-60">{{ month.count }} posts</span>
            </a>
          </li>
        {% endarchive_months %}

      </ul>
    </section>
  </div>
</div>

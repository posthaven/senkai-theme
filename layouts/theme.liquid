<!DOCTYPE html>
<html class="no-js">
  <head>
      <script>
        // Load LiveReload immediately
        var script = document.createElement('script');
        script.src = 'http://' + location.hostname + ':35729/livereload.js?snipver=1&force=true&host=' + location.hostname;
        document.write(script.outerHTML);
      </script>
    
    <title>{{ request.page_title }}</title>

    <meta content="width=device-width,initial-scale=1" name="viewport">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">

    {{ meta_tags }}

    <link href="{{ 'images/favicon.ico' | asset_url }}" rel="shortcut icon" type="image/x-icon">

    {{ posthaven.includes_for_head }}

    {% comment %}
    {{ "blog.css" | local_file | style_tag }}
    {% endcomment %}
    {{ "blog.css" | asset_url | stylesheet_tag }}

    <link rel="stylesheet" href="https://use.typekit.net/iim1sys.css">

    <!-- Try local_file first -->
    {{ "stylesheets/tailwind.css" | local_file | style_tag }}


    <style>

      body.color-scheme-light {
        --background: 255, 255, 255;
        --primary: 0, 0 ,0;
        --link: {{ settings.link-color | hex_to_rgb }};
      }

      body.color-scheme-dark {
        --primary: 255, 255, 255;
        --background: 27, 38, 44;
        --link: {{ settings.link-color | hex_to_rgb }};
      }

      @media (prefers-color-scheme: dark) {
        body {
          --primary: 255, 255, 255;
          --background: 27, 38, 44;
        --link: {{ settings.link-color | hex_to_rgb }};
        }
      }

      @media (prefers-color-scheme: light) {
        body {
          --background: 255, 255, 255;
          --primary: 0, 0 ,0;
          --link: {{ settings.link-color | hex_to_rgb }};
        }
      }
    </style>

  </head>

  <body id="site_{{ site.id }}" class="{{ request.template }}-template{% if settings.color-scheme %} color-scheme-{{ settings.color-scheme }}{% endif %} bg-canvas">
    <div class="fixed inset-4 rounded-xl bg-[#111] shadow-[0px_4px_4px_rgba(0,0,0,0.25),0px_100px_80px_rgba(0,0,0,0.07),0px_41.7776px_33.4221px_rgba(0,0,0,0.0503198),0px_22.3363px_17.869px_rgba(0,0,0,0.0417275),0px_12.5216px_10.0172px_rgba(0,0,0,0.035),0px_6.6501px_5.32008px_rgba(0,0,0,0.0282725),inset_0px_1px_0px_2px_rgba(255,255,255,0.25)]"></div>
    <div class="fixed inset-4 rounded-xl bg-gradient-to-br from-[#000] via-transparent to-[#FFA52E] opacity-50"></div>
    {% comment %} <div class="fixed inset-4 rounded-xl bg-gradient-to-tr from-[#593200] via-[#4B3212] to-[#593200] opacity-25"></div> {% endcomment %}
    <div class="fixed inset-4 rounded-xl bg-gradient-to-tr from-[#000] via-[rgba(0,0,0,0)] to-[#000] opacity-25"></div> 

    <div id="site-container">

        <header class="header">
          <div class="text-xl text-[#00f]">Hello world!</div>
          <h1>
            <a href="{{ site.url }}">{% if site.name or site.profile.name %}{% if site.name %}{{ site.name | smarty_pants }}{% else %}{{ site.profile.name }}{% endif %}{% else %}Untitled Posthaven{% endif %}</a>!!!!
          </h1>

          {% if site.description %}
            <h5>{{ site.description | smarty_pants }}</h5>
          {% endif %}

          <section class="menu">
            <div class="menu-trigger button">â˜° <span>Menu</span></div>
          </section>
          {{ posthaven.user_menu_v2 }}

        </header>

        {% if subhead_content %}
          <section class="subhead">
            {{ subhead_content }}
          </section>
        {% endif %}

        <div class="main-content">
          {{ content_for_layout }}
        </div>
        {% include "footer" %}

      <div id="flash">
        {% for alert in posthaven.alerts %}
          <div class="alert alert-{{ alert.type }}">
            {{ alert.message }}
          </div>
        {% endfor %}
      </div>
    </div>

    {{ posthaven.includes_for_body }}
    {% include "sidebar" %}
    <div id="svg-icons" style="display:none;"></div>

    <script type="text/javascript">

      Posthaven.$(document).ready(function () {
        // when clicking nav menu (to open)
        Posthaven.$(".menu-trigger").click(function(){
          Posthaven.$("body").toggleClass("menu-active");
          Posthaven.$(".ph-canvas").toggleClass("active");
          Posthaven.$(".ph-menu").addClass("open");
        });

        // when clicking posthaven icon
        Posthaven.$(".ph-trigger").click(function(){
          Posthaven.$(".ph-menu").toggle(500,"easeOutQuint");
          Posthaven.$(".ph-trigger").toggleClass("active");
          Posthaven.$(".ph-canvas").toggleClass("active");
        });

        // when clicking the background canvas, which should close both
        // menu and ph button
        Posthaven.$(".ph-canvas").click(function(){
          if(Posthaven.$(".ph-trigger").hasClass('active')) {
            Posthaven.$(".ph-trigger").removeClass("active");
            Posthaven.$(".ph-menu").toggle(500,"easeOutQuint");
            Posthaven.$(".ph-menu").removeClass("open");
          }
          Posthaven.$(".ph-canvas").removeClass("active");
          Posthaven.$("body").removeClass("menu-active");
        });
        Posthaven.$.get( "{{ 'images/icons.svg' | asset_url }}", function( icons ) {
          Posthaven.$( "#svg-icons" ).html( icons.getElementsByTagName("svg")[0] );
        });
      });
    </script>
    <div class="ph-canvas"></div>
  </body>
</html>
